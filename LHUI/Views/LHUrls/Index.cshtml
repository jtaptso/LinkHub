@model IEnumerable<LHBOL.LHUrl>

@{
    ViewData["Title"] = "Index";
}

@*@model IEnumerable<LHBOL.Category>

@{
    ViewData["Title"] = "Index";
}*@
<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Urls</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Urls</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><a asp-action="Create">Add an Url</a></h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 10%">
                                    @Html.DisplayNameFor(model => model.UrlTitle)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.LHUrlName)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th style="width: 10%">
                                    @Html.DisplayNameFor(model => model.IsApproved)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.LHUser)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UrlTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LHUrlName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsApproved)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LHUser)
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.CategoryId">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.CategoryId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoryId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>