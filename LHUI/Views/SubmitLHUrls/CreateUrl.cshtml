@model LHUI.ViewModel.CreateUrlViewModel

@{
    ViewData["Title"] = "CreateUrl";
}

<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
             <div class="container-fluid">
                 <div class="row mb-2">
                     <div class="col-sm-6">
                         <h1>Propose an Url</h1>
                     </div>
                     <div class="col-sm-6">
                         <ol class="breadcrumb float-sm-right">
                             <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                             <li class="breadcrumb-item active">Create Url</li>
                         </ol>
                     </div>
                 </div>
             </div>
         </section>

        <section class="content">
             <div class="row">
                 <div class="col-md-6">
                     <form asp-action="CreateUrl">
                         <div class="card card-primary">
                             <div class="card-header">
                                 <h3 class="card-title">New Url</h3>
                                 <div class="card-tools">
                                     <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                         <i class="fas fa-minus"></i>
                                     </button>
                                 </div>
                             </div>
                             <div class="card-body">
                                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                 <div class="form-group">
                                     <label asp-for="UrlTitle" class="control-label"></label>
                                     <input asp-for="UrlTitle" class="form-control" />
                                     <span asp-validation-for="UrlTitle" class="text-danger"></span>
                                 </div>
                                 <div class="form-group">
                                     <label asp-for="LHUrlName" class="control-label"></label>
                                     <input asp-for="LHUrlName" class="form-control" />
                                     <span asp-validation-for="LHUrlName" class="text-danger"></span>
                                 </div>
                                 <div class="form-group">
                                     <label asp-for="Description" class="control-label"></label>
                                     <input asp-for="Description" class="form-control" />
                                     <span asp-validation-for="Description" class="text-danger"></span>
                                 </div>
                                 <div class="form-group">
                                     <label asp-for="CategoryId"></label>
                                     <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control custom-select">
                                         <option selected disabled>Select a category</option>
                                     </select>
                                     <span asp-validation-for="CategoryId" class="text-danger"></span>
                                 </div>
                             </div>
                         </div>
                         <div class="col-12">
                             <input type="submit" value="Suggeste an Url" class="btn btn-success float-left">
                         </div>
                     </form>
                 </div>
                 <div class="col-md-6">
                     <div class="card card-secondary">
                         <div class="card-header">
                             <h3 class="card-title">Info</h3>
                             <div class="card-tools">
                                 <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                     <i class="fas fa-minus"></i>
                                 </button>
                             </div>
                         </div>
                         <div class="card-body">
                             <p> You can suggest an url and we'll be glad to check if it's worth approving </p>
                         </div>
                     </div>
                 </div>
             </div>
         </section>
    </div>
</div>